<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import ua.itea.gui.GUILocalFileRow?>

<VBox xmlns:fx="http://javafx.com/fxml" stylesheets="app.css">
	<HBox>
		<TextField promptText="address" fx:id="addressTextField" />
		<VBox styleClass="colon">
			<Text>:</Text>
		</VBox>
		<TextField styleClass="port" promptText="port"
			fx:id="portTextField" />
		<Button text="Connect" fx:id="connectButton" />
		<Button text="Select..." fx:id="selectButton" />
	</HBox>
	<SplitPane fx:id="splitPane" VBox.vgrow="ALWAYS">
		<items>
			<BorderPane fx:id="leftBorderPane">
				<left>
					<VBox>
						<Button text="Add Files" fx:id="addFiles" />
						<Button text="Remove Files" fx:id="removeFiles" />
					</VBox>
				</left>
				<center>
					<TableView fx:id="localComputer"
						TableMenuButtonVisible="true">
						<columns>
							<TableColumn text="Name">
								<cellValueFactory>
									<PropertyValueFactory property="fileName" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Path">
								<cellValueFactory>
									<PropertyValueFactory property="filePath" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Size" styleClass="right-to-left">
								<cellValueFactory>
									<PropertyValueFactory
										property="filledSize" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Total" styleClass="right-to-left">
								<cellValueFactory>
									<PropertyValueFactory
										property="totalFileSize" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Progress">
								<cellValueFactory>
									<PropertyValueFactory
										property="progressBar" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Priority">
								<cellValueFactory>
									<PropertyValueFactory property="priority" />
								</cellValueFactory>
							</TableColumn>
						</columns>
					</TableView>
				</center>
				<bottom>
					<ProgressBar />
				</bottom>
			</BorderPane>
			<BorderPane fx:id="rightBorderPane">
				<center>
					<TableView fx:id="remoteComputer"
						TableMenuButtonVisible="true">
						<columns>
							<TableColumn text="Name">
								<cellValueFactory>
									<PropertyValueFactory property="fileName" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Size" styleClass="right-to-left">
								<cellValueFactory>
									<PropertyValueFactory
										property="filledSize" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Total" styleClass="right-to-left">
								<cellValueFactory>
									<PropertyValueFactory
										property="totalFileSize" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn text="Progress">
								<cellValueFactory>
									<PropertyValueFactory
										property="progressBar" />
								</cellValueFactory>
							</TableColumn>
						</columns>
					</TableView>
				</center>
				<bottom>
					<ProgressBar />
				</bottom>
			</BorderPane>
		</items>
	</SplitPane>
</VBox>